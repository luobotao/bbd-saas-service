<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="bbd-saas-provider" owner="bbd-saas-provider" organization="com.bbd"/>

    <dubbo:registry address="zookeeper://182.92.227.140:2181"/>

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880" />
    <!-- 声明需要暴露的服务接口-->
    <dubbo:service interface="com.bbd.saas.api.AdminUserService" ref="adminUserService" />
    <dubbo:service interface="com.bbd.saas.api.OrderService" ref="orderService" />
    <dubbo:service interface="com.bbd.saas.api.UserService" ref="userService" />

    <import resource="classpath:META-INF/spring/bbd-saas-service.xml" />
</beans>